{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [
			".next/**",
			"node_modules/**",
			"pnpm-lock.yaml",
			".env*",
			"*.lock",
			"*.log",
			"public/**",
			"out/**",
			".vercel/**",
			"coverage/**",
			"dist/**",
			"graphql-env.d.ts",
			".astro"
		]
	},
	"formatter": { "enabled": true, "indentStyle": "tab" },
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},
	"javascript": { "formatter": { "quoteStyle": "double" } }
}
